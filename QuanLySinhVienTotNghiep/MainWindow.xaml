<Window x:Class="QuanLySinhVienTotNghiep.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:QuanLySinhVienTotNghiep"
        mc:Ignorable="d"
        xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
        WindowStartupLocation="CenterScreen" AllowsTransparency="True"
        Title="Đăng Nhập" Height="500" Width="350" ResizeMode="NoResize" WindowStyle="None" >
    <Grid>
        <Rectangle Height="300" VerticalAlignment="Top">
            <Rectangle.Fill>
                <LinearGradientBrush StartPoint="0.5,0" EndPoint="0.5,1" >
                    <GradientStop Color="HotPink" />
                    <GradientStop Color="LightPink" Offset="1" />
                    <GradientStop Color="DeepPink" Offset="0.5" />
                </LinearGradientBrush>
            </Rectangle.Fill>
        </Rectangle>
        <Image Source="Images/logo.png" Width="90" Height="90" VerticalAlignment="Top" Margin="10"/>
        <Rectangle Height="300" Width="300" Fill="White" RadiusX="10" RadiusY="10" Margin="0,40,0,0">
            <Rectangle.Effect>
                <DropShadowEffect Color="#FFBBBBBB" Direction="0" BlurRadius="20" RenderingBias="Quality" ShadowDepth="5"/>
            </Rectangle.Effect>
        </Rectangle>
        <Grid Height="300" Width="300" VerticalAlignment="Bottom" Margin="0,75">
            <TextBlock Text="ĐĂNG NHẬP" VerticalAlignment="Top" HorizontalAlignment="Center" Margin="0,20,0,0" Foreground="DarkRed" FontSize="15" FontWeight="Bold"></TextBlock>
            <StackPanel VerticalAlignment="Center" Margin="5,-50,5,0">
                <TextBox FontSize="13" materialDesign:HintAssist.Hint="TÀI KHOẢN" Style="{StaticResource MaterialDesignFloatingHintTextBox}" Margin="0,5" />
                <PasswordBox FontSize="13" materialDesign:HintAssist.Hint="MẬT KHẨU" Style="{StaticResource MaterialDesignFloatingHintPasswordBox}" Margin="0,5" />
                <TextBox FontSize="13" materialDesign:HintAssist.Hint="MÃ XÁC NHẬN" Style="{StaticResource MaterialDesignFloatingHintTextBox}" />
            </StackPanel>
            <Image Height="30" Width="200" Margin="-100,220,0,0" Source="Images/capcha.jpg"/>
            <Button Width="50" Height="50" VerticalAlignment="Bottom" Margin="100,0,0,10">
                <Button.Background>
                    <ImageBrush ImageSource="pack://application:,,,/QuanLySinhVienTotNghiep;component/Images/refesh.png" />
                </Button.Background>
            </Button>
        </Grid>

        <Button Content="Đăng Nhập" Width="150" Height="30" VerticalAlignment="Bottom" Margin="10,40"></Button>
        <Label Foreground="Blue" FontStretch="UltraCondensed" FontSize="15" Width="150" Height="30" VerticalAlignment="Bottom" Margin="45,10,0,0">
            <TextBlock TextDecorations="Underline">Quên mật khẩu</TextBlock>
        </Label>
    </Grid>
</Window>
